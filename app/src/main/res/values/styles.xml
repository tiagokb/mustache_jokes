<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="FormContainer">
        <item name="android:padding">16dp</item>
    </style>

    <style name="CustomTabContainer">
        <item name="android:paddingTop">36dp</item>
    </style>

    <style name="InstaFormButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:padding">16dp</item>
        <item name="android:background">@drawable/button_background</item>
    </style>

    <style name="DefaultTextText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">?attr/colorOnSecondary</item>
    </style>

    <style name="DefaultTextText.Hint">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>

    <style name="DefaultTextText.OnPrimary">
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>

    <style name="DefaultEditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@drawable/et_default_background</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>

    <style name="DefaultTIL">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColorHint">?attr/colorOnPrimary</item>
    </style>
</resources>